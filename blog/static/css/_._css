    position: ;
    bottom: 0;
    width: 100%;
    padding-top: 15px;
    text-align: center;
    background: var(--main-bg-color);
    box-shadow: 0px 10px 15px -7px rgba(0,0,0,0.5) inset;
}

footer p {
    font-size: 9pt;
    color: #C0B6E6;
}